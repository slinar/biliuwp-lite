<local:BasePage
    x:Class="BiliLite.Pages.MessagesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BiliLite.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:messages="using:BiliLite.ViewModels.Messages"
    xmlns:mucx="using:Microsoft.UI.Xaml.Controls"
    xmlns:msg="using:BiliLite.Models.Common.Msg"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot>
            <PivotItem Margin="0" >
                <PivotItem.Header>
                    <TextBlock FontSize="15">我的消息</TextBlock>
                </PivotItem.Header>
                <Grid Padding="12 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer Width="320" VerticalScrollBarVisibility="Auto">
                        <ListView ItemsSource="{x:Bind m_viewModel.ChatContexts,Mode=OneWay}"
                                  SelectionChanged="ChatContextListView_OnSelectionChanged"
                                  SelectedItem="{x:Bind m_viewModel.SelectedChatContext,Mode=TwoWay}"
                                  x:Name="ChatContextListView">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="messages:ChatContextViewModel">
                                    <Grid Height="78" Padding="24 19">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition  Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Ellipse Width="40" Height="40"
                                                 Margin="0 0 8 0"
                                                 Grid.RowSpan="2">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{x:Bind Path=Cover,Mode=OneWay,Converter={StaticResource imageConvert2},ConverterParameter='42w'}"></ImageBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Grid.Column="1" Text="{x:Bind Title}"></TextBlock>

                                        <mucx:InfoBadge Grid.Column="2" 
                                                        Grid.Row="0" 
                                                        Value="{x:Bind UnreadMsgCount,Mode=OneWay}" 
                                                        Visibility="{x:Bind HasUnreadMsg,Mode=OneWay}"/>

                                        <TextBlock Grid.Column="1" 
                                                   Grid.ColumnSpan="2" 
                                                   Grid.Row="1" 
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="NoWrap"
                                                   Text="{x:Bind LastMsg.DisplayText,Mode=OneWay}"></TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Footer>
                                <HyperlinkButton Click="LoadMore_OnClick" Visibility="{x:Bind Path=m_viewModel.HasMore,Mode=OneWay}" Foreground="Gray" HorizontalAlignment="Center" >
                                    <TextBlock>加载更多</TextBlock>
                                </HyperlinkButton>
                            </ListView.Footer>
                        </ListView>
                    </ScrollViewer>
                    <Grid Grid.Column="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock HorizontalAlignment="Center" HorizontalTextAlignment="Center" Text="{x:Bind m_viewModel.SelectedChatContext.Title,Mode=OneWay}"></TextBlock>
                        <ListView x:Name="ChatMessageListView" 
                                  Grid.Row="1"
                                  ItemsSource="{x:Bind m_viewModel.ChatMessages,Mode=OneWay}">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="msg:ChatMessage">
                                        <Grid>
                                            <Grid Visibility="{x:Bind TextContent,Converter={StaticResource display}}">
                                                <Grid Visibility="{x:Bind IsSelf,Converter={StaticResource display}}" Margin="10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Width="40" Height="40" Margin="10,0,10,0"
                                                         VerticalAlignment="Top">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{x:Bind Path=Face,Mode=OneWay,Converter={StaticResource imageConvert2},ConverterParameter='42w'}"></ImageBrush>
                                                        </Ellipse.Fill>
                                                    </Ellipse>

                                                    <!--消息气泡-->
                                                    <Border Background="{ThemeResource DefaultCardColor}" 
                                                        Grid.Column="1"
                                                        CornerRadius="10" Padding="10" >
                                                        <StackPanel>
                                                            <TextBlock Text="{x:Bind TextContent.Content}" TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>

                                                <Grid Visibility="{x:Bind IsSelf}" Margin="10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Grid.Column="1" Width="40" Height="40" Margin="10,0,10,0"
                                                         VerticalAlignment="Top">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{x:Bind Path=Face,Mode=OneWay,Converter={StaticResource imageConvert2},ConverterParameter='42w'}"></ImageBrush>
                                                        </Ellipse.Fill>
                                                    </Ellipse>

                                                    <!-- 消息气泡 -->
                                                <Border Background="{ThemeResource DefaultCardColor}" 
                                                        CornerRadius="10" Padding="10" >
                                                        <StackPanel>
                                                            <TextBlock Text="{x:Bind TextContent.Content}" TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                    </Grid>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</local:BasePage>
